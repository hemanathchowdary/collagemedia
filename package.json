{
  "name": "college-media",
  "version": "1.0.0",
  "description": "College Media Platform with Next.js frontend and Express backend",
  "main": "index.js",
  "scripts": {
    "frontend": "cd frontend && pnpm run dev",
    "backend": "cd backend && pnpm run dev",
    "dev": "concurrently \"pnpm run frontend\" \"pnpm run backend\"",
    "frontend:build": "cd frontend && pnpm run build",
    "backend:build": "cd backend && pnpm run build",
    "build": "pnpm run frontend:build && pnpm run backend:build",
    "start": "cd backend && pnpm start"
  },
  "keywords": [
    "nextjs",
    "express",
    "mongodb",
    "college",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
} 